<resources>

    <style name="Widget.CIS.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@color/color_background</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.CIS.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

    <style name="Widget.CIS.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/TextAppearance.CIS.Toolbar.Title</item>
        <item name="searchViewStyle">@style/Widget.CIS.SearchView</item>
    </style>

    <style name="Widget.CIS.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.CIS.Chip</item>
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="chipBackgroundColor">?attr/colorOnBackground</item>
        <item name="rippleColor">?attr/colorOnSurface</item>
        <item name="closeIconTint">?attr/colorOnSurface</item>
        <item name="chipIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.CIS.Chip.Amount" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/color_chip_bg</item>
        <item name="android:textColor">@color/color_chip_text</item>
        <item name="android:textAppearance">@style/TextAppearance.CIS.Chip.Amount</item>
    </style>

    <style name="Widget.CIS.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.CIS.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/elevation_card_view</item>
        <item name="cardBackgroundColor">@color/color_fill</item>
        <item name="strokeWidth">@dimen/size_stroke</item>
        <item name="strokeColor">@color/color_stroke</item>
    </style>

    <style name="Widget.CIS.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Widget.CIS.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:elevation">@dimen/elevation_bottom_sheet</item>
    </style>

    <style name="Widget.CIS.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/peek_height_bottom_sheet_modal</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="Widget.CIS.RecyclerView" parent="">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.CIS.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="fontFamily">@font/proxima_nova_soft_bold</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="Widget.CIS.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/proxima_nova_soft_bold</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="Widget.CIS.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">@string/title_search</item>
        <item name="searchIcon">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="Widget.CIS.NumPad" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/proxima_nova_soft_bold</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:background">@drawable/primary_ripple</item>
    </style>

    <style name="InfoLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:drawablePadding">@dimen/spacing_large</item>
        <item name="fontFamily">@font/proxima_nova_soft_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    
    <style name="ToolbarDivider">
        <item name="layout_collapseMode">parallax</item>
    </style>

</resources>
